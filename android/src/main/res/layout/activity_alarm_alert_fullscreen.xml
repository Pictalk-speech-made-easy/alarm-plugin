<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/alarm_background"
    android:gravity="center"
    android:padding="24dp">

    <!-- Clock Display -->

    <!-- Alarm Label -->
    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-light"
        android:text="07:30"
        android:textColor="@color/alarm_text_primary"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/alarm_label"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="Alarm"
        android:textColor="@color/alarm_text_secondary"
        android:textSize="24sp" />

    <!-- Alarm Icon or Animation -->
    <ImageView
        android:id="@+id/alarm_icon"
        android:layout_width="206dp"
        android:layout_height="199dp"
        android:layout_marginBottom="48dp"
        android:adjustViewBounds="true"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_alarm_on" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Dismiss Button -->
        <Button
            android:id="@+id/dismiss_button"
            android:layout_width="342dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/alarm_button_background_dismiss"
            android:elevation="4dp"
            android:text="Dismiss"
            android:textColor="@color/alarm_button_text"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>